<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient_primary">

    <!-- Logo / App name area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="56dp">

        <TextView
            android:id="@+id/titleMainMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="#FFFFFF"
            android:textSize="48sp"
            android:textStyle="bold"
            android:letterSpacing="0.05"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Persiapan Ujian Nasional"
            android:textColor="#C7D2FE"
            android:textSize="14sp"
            android:letterSpacing="0.08"/>

    </LinearLayout>

    <!-- Menu buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:paddingBottom="56dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/latihanMainMenu"
            style="@style/PrimaryButton"
            android:layout_width="match_parent"
            android:text="ðŸ“  Latihan Soal"
            android:backgroundTint="@color/colorSurface"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:elevation="6dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/riwayatMainMenu"
            style="@style/SecondaryButton"
            android:layout_width="match_parent"
            android:layout_marginTop="12dp"
            android:text="ðŸ†  Riwayat Nilai"
            android:textColor="#FFFFFF"
            app:strokeColor="#FFFFFF"
            app:strokeWidth="1.5dp"/>

    </LinearLayout>

</LinearLayout>
